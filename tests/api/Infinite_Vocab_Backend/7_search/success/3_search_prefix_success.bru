meta {
  name: search_prefix_success
  type: http
  seq: 3
}

get {
  url: {{apiUrl}}/api/v1/search?q=Testable
  body: none
  auth: bearer
}

auth:bearer {
  token: {{idToken}}
}

tests {
  test("Status is 200 OK", function() {
    expect(res.status).to.equal(200);
  });

  test("Response has correct shape", function() {
    expect(res.body).to.have.property('words');
    expect(res.body).to.have.property('categories');
  });

  test("Correct number of results found", function() {
    expect(res.body.words).to.have.lengthOf(1);
    expect(res.body.categories).to.have.lengthOf(1);
  });

  test("Correct content in results", function() {
    expect(res.body.words[0].wordText).to.equal("Testableword");
    expect(res.body.categories[0].categoryName).to.equal("Testablecategory");
  });
}
