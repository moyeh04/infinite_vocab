meta {
  name: setup_search_word
  type: http
  seq: 1
}

post {

  url: {{apiUrl}}/api/v1/words/

  body: json

  auth: none

}


headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {

    "wordText": "TestableWord",
    "descriptionText": "A word created for search testing.",

    "exampleText": "This is a testable example."
  }
}

vars:post-response {
  searchTestWordId: res.body.wordId
}

tests {

  test("Status is 201", function() {
    expect(res.status).to.equal(201);
  });
}

