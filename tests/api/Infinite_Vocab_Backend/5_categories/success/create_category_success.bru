meta {
  name: create_category_success
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/v1/categories/
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "categoryName": "Test Bruno Category",
    "categoryColor": "#FF5733"
  }
}

tests {
  test("Status is 201 (Created)", function() {
    expect(res.status).to.equal(201);
  });
  test("Response has category data", function() {
    expect(res.body).to.have.property('categoryId');
    expect(res.body).to.have.property('categoryName');
    expect(res.body).to.have.property('categoryColor');
    expect(res.body).to.have.property('userId');
    expect(res.body).to.have.property('createdAt');
  });
  test("Category properties match request", function() {
    expect(res.body.categoryName).to.equal('Test Bruno Category');
    expect(res.body.categoryColor).to.equal('#FF5733');
  });
  // Store category ID for other tests
  bru.setEnvVar("testCategoryId", res.body.categoryId);
}
