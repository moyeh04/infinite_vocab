meta {
  name: update_category_success
  type: http
  seq: 4
}

put {
  url: {{apiUrl}}/api/v1/categories/{{categoryId}}
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "categoryName": "Updated Science Terms",
    "categoryColor": "#FF5733"
  }
}

tests {
  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Category name is updated and title cased", function() {
    expect(res.body.categoryName).to.equal('Updated Science Terms');
  });
  
  test("Category color is updated and lowercase", function() {
    expect(res.body.categoryColor).to.equal('#ff5733');
  });
  

  test("Updated timestamp exists", function() {
    expect(res.body).to.have.property('updatedAt');
    expect(res.body.updatedAt).to.be.a('string');
  });
  
  test("Category ID remains unchanged", function() {
    expect(res.body.categoryId).to.equal(bru.getVar('categoryId'));
  });
  
  test("Created timestamp remains unchanged", function() {
    expect(res.body).to.have.property('createdAt');
  });
}
