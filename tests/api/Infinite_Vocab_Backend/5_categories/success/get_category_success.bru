meta {
  name: get_category_success
  type: http
  seq: 3
}

get {
  url: {{apiUrl}}/api/v1/categories/{{categoryId}}
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
}

tests {

  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response has camelCase fields", function() {
    expect(res.body).to.have.property('categoryId');
    expect(res.body).to.have.property('categoryName');
    expect(res.body).to.have.property('categoryColor');
    expect(res.body).to.have.property('userId');
    expect(res.body).to.have.property('createdAt');
  });
  
  test("Category ID matches request", function() {
    expect(res.body.categoryId).to.equal(bru.getVar('categoryId'));

  });
  
  test("Category belongs to authenticated user", function() {
    expect(res.body.userId).to.be.a('string');
  });
}
