meta {
  name: update_category_not_found_error
  type: http
  seq: 4
}

put {
  url: {{apiUrl}}/api/v1/categories/nonexistent123
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "categoryName": "Updated Name",
    "categoryColor": "#4287f5"
  }
}

tests {
  test("Status is 404 (Not Found)", function() {
    expect(res.status).to.equal(404);
  });
  test("Error message indicates category not found", function() {
    expect(res.body).to.have.property('error');
    expect(res.body.error.toLowerCase()).to.include('not found');
  });
}
