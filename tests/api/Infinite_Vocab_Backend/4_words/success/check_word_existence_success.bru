meta {
  name: check_word_existence_success
  type: http
  seq: 8
}

post {
  url: {{apiUrl}}/api/v1/words/check-existence
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "wordText": "innovative"
  }
}

tests {
  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });

  test("Response has camelCase fields", function() {
    expect(res.body).to.have.property('exists');
    expect(res.body.exists).to.be.a('boolean');
  });

  test("If word exists, should have wordId", function() {
    if (res.body.exists) {
      expect(res.body).to.have.property('wordId');
    }
  });
}
