meta {
  name: delete_word_success
  type: http
  seq: 9
}

delete {
  url: {{apiUrl}}/api/v1/words/{{wordId}}
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

tests {
  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response has success message", function() {
    expect(res.body).to.have.property('message');
    expect(res.body.message).to.contain('successfully deleted');
  });
  
  test("Response includes deleted wordId", function() {
    expect(res.body).to.have.property('wordId');
    expect(res.body.wordId).to.equal(bru.getVar('wordId'));
  });
}
