meta {
  name: invalid_token_test
  type: http
  seq: 1
}

get {
  url: {{apiUrl}}/api/v1/words/
  auth: none
}

headers {
  Authorization: Bearer invalid_token_here
  Content-Type: application/json
}

tests {
  test("Status is 401", function() {
    expect(res.status).to.equal(401);
  });

  test("Response has error field", function() {
    expect(res.body).to.have.property('error');
  });

  test("Error message mentions authentication", function() {
    expect(res.body.error.toLowerCase()).to.match(/(auth|token|unauthorized|invalid)/);
  });
}
