meta {
  name: 1_create_user_first_time
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/v1/users/
  body: json
  auth: bearer
}

auth:bearer {
  token: {{idToken}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "userName": "Bruno Test User"
  }
}

tests {
  test("Status is 201 Created", function() {
    expect(res.status).to.equal(201);
  });

  test("User name matches request", function() {
    expect(res.body.userName).to.equal("Bruno Test User");
  });

  test("Response has correct user structure", function() {
    expect(res.body).to.have.property('userId');
    expect(res.body).to.have.property('userCode');
    expect(res.body).to.have.property('totalScore');
  });
}

