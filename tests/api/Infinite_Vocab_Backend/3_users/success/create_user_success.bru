meta {
  name: create_user_success
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/v1/users/
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "name": "Test User"
  }
}

tests {
  test("Status is 201", function() {
    expect(res.status).to.equal(201);
  });

  test("Response has camelCase fields", function() {
    expect(res.body).to.have.property('userId');
    expect(res.body).to.have.property('userCode');
    expect(res.body).to.have.property('message');
  });

  test("Response contains success message", function() {
    expect(res.body.message).to.contain('successfully');
  });

  test("User name matches request", function() {
    expect(res.body.name).to.equal('Test User');
  });
}
