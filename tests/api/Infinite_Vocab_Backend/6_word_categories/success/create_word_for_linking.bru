meta {
  name: create_word_for_linking
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/v1/words/
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "wordText": "Biotechnology",
    "descriptionText": "The exploitation of biological processes for industrial and other purposes.",
    "exampleText": "Biotechnology is a key part of modern medicine."
  }
}

vars:post-response {
  linkTestWordId: res.body.wordId
}

tests {
  test("Status is 201", function() {
    expect(res.status).to.equal(201);
  });
}
