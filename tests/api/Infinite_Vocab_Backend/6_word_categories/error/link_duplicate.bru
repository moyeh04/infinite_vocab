meta {
  name: link_duplicate_error
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/v1/categories/{{linkTestCategoryId}}/words
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{idToken}}
  Content-Type: application/json
}

body:json {
  {
    "wordId": "{{linkTestWordId}}"
  }
}

tests {
  test("Status is 400 Bad Request", function () {
    expect(res.status).to.equal(400);
  });
  
  test("Error message for duplicate", function () {
    expect(res.body.error).to.include('already in this category');
  });
}
